<Window x:Class="lets_play_wpf.Jeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lets_play_wpf"
        mc:Ignorable="d"
        Title="Jeu" Height="450" Width="800">
    <Grid Margin="12">
        <StackPanel>
            <TextBox x:Name="txtCharacter" Text="" Width="50" Margin="0 10 0 10"/>
            <Button x:Name="btnPlay"  Content="Jouer" Width="100" Margin="0 10 0 10"/>
            <TextBlock x:Name="txtblMotMystere" Text="Mystere a trouver" Width="250" Margin="0 10 0 10"/>
            <TextBlock x:Name="txtblWin" Text="Bravo vous avez réussi à trouver le mot mystère !" Width="270" Margin="0 10 0 10"/>
            <TextBox x:Name="txtbPrenom" Text="Prenom" Width="150" Margin="0 10 0 10"/>
            <TextBox x:Name="txtbScore" Text="Score" Width="60" Margin="0 10 0 10"/>
            <Button x:Name="btnRegister" Content="Enregistrer" Width="100" Margin="0 10 0 10" Padding="5"/>
            <Button x:Name="btnExit" Content="Quitter" Width="100" Margin="0 10 0 10" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
