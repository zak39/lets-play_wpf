<Window x:Class="lets_play_wpf.MajScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lets_play_wpf"
        mc:Ignorable="d"
        Title="MajScore" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="12">
            <TextBox  Text="Prenom" Width="150" Margin="0 10 0 10"/>
            <TextBox Text="Score" Width="60" Margin="0 10 0 10"/>
            <Button Content="Mettre à jour" Width="110" Margin="0 10 0 10"/>
        </StackPanel>
    </Grid>
</Window>
